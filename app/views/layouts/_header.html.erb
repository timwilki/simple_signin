<header>


  <nav class="navbar navbar-toggleable-md navbar-light ">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <%= link_to "RollCall", root_path, class: "navbar-brand", id: "logo" %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <% if logged_in? %>
      <%= link_to "Launch sign in sheet", team_members_path, id: "launch_signin"  %>
      <% end %>


      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Help", help_path, class: "nav-link" %>
        </li>
        <% if logged_in? %>
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account</a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <%= link_to "profile", current_user, class: "dropdown-item" %>
              <%= link_to "settings", edit_user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", logout_path, method: "delete", class: "dropdown-item" %>
        </li>
        <% end %>
        <% if logged_in? %>
          <% if current_user.superadmin? && !current_user?(@user) %>
        <li class="nav-item">
          <%= link_to "Organisations", organisations_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Users", users_path, class: "nav-link" %>
        </li>
          <% end %>
        <% else %>
        <li class="nav-item">
          <%= link_to "Log in", login_path, class: "nav-link" %>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>


</header>
